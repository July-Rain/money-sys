<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawschool.dao.RoleMapper">
    <resultMap id="BaseResultMap" type="com.lawschool.beans.Role">
        <id column="ROLE_ID" property="roleId" jdbcType="INTEGER" />
        <result column="ROLE_NAME" property="roleName" jdbcType="VARCHAR" />
        <result column="REMARK" property="remark" jdbcType="VARCHAR" />
        <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.lawschool.beans.Role">
    insert
    into
    LAW_SYS_ROLE
    (ROLE_ID,ROLE_NAME,REMARK,CREATE_TIME)
    values
    (#{roleId},#{roleName},#{remark},#{createTime})
  </insert>

    <delete id="deleteRoleById" parameterType="Integer">
    delete
    from
     LAW_SYS_ROLE
    where
        ROLE_ID = #{roleId}
  </delete>

    <update id="update" parameterType="com.lawschool.beans.Role">
    update
    LAW_SYS_ROLE
    set
     ROLE_NAME = #{roleName}
    where
       ROLE_ID = #{roleId}
  </update>

    <select id="selectById" parameterType="Integer" resultMap="BaseResultMap">
    select *
    from
      LAW_SYS_ROLE
    where
      ROLE_ID = #{roleId}


  </select>

</mapper>