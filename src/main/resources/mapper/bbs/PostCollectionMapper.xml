<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lawschool.dao.bbs.PostCollectionDao">

    <select id="queryPostIdList" resultType="string">
        SELECT
        post_id
        FROM law_post_collection
        <where>
            user_id = #{userId}
        </where>
    </select>

    <delete id="deleteByUserId" parameterType="string">
        DELETE FROM law_post_collection
        <where>
            user_id = #{userId}
        </where>
    </delete>

    <delete id="deleteByPostId">
        DELETE FROM law_post_collection
        WHERE post_id IN
        <foreach collection="list" index="index" item="item" open=" (" separator="," close=") ">
            #{item}
        </foreach>
    </delete>

    <insert id="insert">
		INSERT INTO law_post_collection
			(id,
			post_id,
			user_id
			)
		VALUES
			(#{id},
			#{postId},
			#{userId}
			)
	</insert>

    <delete id="deleteBatchByUserId">
        DELETE FROM law_post_collection
        WHERE a.user_id in
        <foreach collection="list" index="index" item="item" open=" (" separator="," close=") ">
            #{item}
        </foreach>
    </delete>

    <select id="findMyCollection" resultType="Integer">
        SELECT
            COUNT (*) num
        FROM
            law_post_collection
        WHERE
            user_id = #{userId}
    </select>
</mapper>